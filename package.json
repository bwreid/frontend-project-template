{
  "name": "project",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      [
        "scssify"
      ]
    ]
  },
  "scripts": {
    "lint": "standard --fix scripts/*.js | snazzy",
