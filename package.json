    "deploy": "npm run lint && npm run build && surge -p ./dist -d g67-gtools.surge.sh"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "fs-extra": "^4.0.2",
    "live-server": "^1.2.0",
    "scssify": "^2.3.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "surge": "^0.19.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "bulma": "^0.5.3"
  }
}
